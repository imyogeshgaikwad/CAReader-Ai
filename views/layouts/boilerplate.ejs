<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust - AI-Powered Travel Platform</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Starability CSS for ratings -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/starability@2.4.2/starability-all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        /* Global AI Badge Styles */
        .ai-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: bold;
            margin-left: 8px;
        }
        
        /* AI Info Box */
        .ai-info-box {
            background: linear-gradient(135deg, #f8f9ff 0%, #e9ecff 100%);
            border-left: 4px solid #667eea;
            padding: 16px;
            border-radius: 8px;
            margin: 20px 0;
        }
        
        /* Animated AI Icon */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        .ai-icon {
            animation: float 3s ease-in-out infinite;
        }
        
        /* Enhanced Navbar */
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        
        /* Footer Styles */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: 50px;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/listings">
                <i class="fa-solid fa-compass"></i> Wanderlust
                <span class="ai-badge">AI</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/listings">
                            <i class="fa-solid fa-house"></i> All Listings
                        </a>
                    </li>
                    <% if(currUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/listings/new">
                                <i class="fa-solid fa-plus"></i> Add Listing
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user"></i> <%= currUser.username %>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <form action="/logout" method="POST" class="d-inline">
                                        <button class="dropdown-item" type="submit">
                                            <i class="fa-solid fa-sign-out-alt"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">
                                <i class="fa-solid fa-user-plus"></i> Sign Up
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">
                                <i class="fa-solid fa-sign-in-alt"></i> Login
                            </a>
                        </li>
                    <% } %>
                    <!-- AI Assistant Quick Access -->
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="openChatbot(); return false;">
                            <i class="fa-solid fa-robot ai-icon"></i> AI Assistant
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% if(success && success.length) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if(error && error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="text-center text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h6>About Wanderlust</h6>
                    <p class="small">Your AI-powered travel companion</p>
                </div>
                <div class="col-md-4">
                    <h6>Features</h6>
                    <p class="small">
                        <i class="fa-solid fa-robot"></i> AI Travel Assistant<br>
                        <i class="fa-solid fa-brain"></i> Smart Recommendations<br>
                        <i class="fa-solid fa-chart-line"></i> Price Intelligence
                    </p>
                </div>
                <div class="col-md-4">
                    <h6>Connect</h6>
                    <a href="#" class="text-muted me-2"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#" class="text-muted me-2"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#" class="text-muted me-2"><i class="fa-brands fa-instagram"></i></a>
                </div>
            </div>
            <hr>
            <p class="small mb-0">
                &copy; 2024 Wanderlust AI. All rights reserved. 
                <span class="ai-badge">Powered by AI</span>
            </p>
        </div>
    </footer>

    <!-- AI Chatbot Component -->
    <%- include('../includes/chatbot') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom Scripts -->
    <script src="/js/script.js"></script>
</body>
</html>