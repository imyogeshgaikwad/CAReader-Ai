<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;

  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter{
    font-size: 0.8rem;
  }
</style>

<div id="filters">
<div class="filter">
 <div><i class="fa-solid fa-fire"></i> </div>
 <p>Trending</p>
</div><div class="filter">
 <div><i class="fa-solid fa-car"></i></div>
 <p>Model</p>
</div>
<div class="filter">
 <div><i class="fa-solid fa-comment"></i></i> </div>
 <p>Recommended</p>
</div><div class="filter">
 <div><i class="fa-solid fa-euro-sign"></i></div>
 <p>Price</p>
</div>
<div class="filter">
 <div><i class="fa-solid fa-thumbs-up"></i> </div>
 <p>Most Valuable</p>
</div><div class="filter">
 <div><i class="fa-solid fa-location-arrow"></i></div>
 <p>Location</p>
</div>
<div class="filter">
 <div><i class="fa-brands fa-teamspeak"></i></div>
 <p>Terms</p>
</div><div class="filter">
 <div><i class="fa-solid fa-envelope"></i></div>
 <p>Gmail</p>
</div>
<div class="filter">
 <div><i class="fa-solid fa-address-book"></i></div>
 <p>Contact</p>
</div>
 <div class="tax-toggle form-check-reverse">
  <div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Total after taxes  </label>
</div>
 

</div>

<div class="container mt-4">
  <h3 class="mb-4">All Cars</h3>
  
  <div class="row">
    <% for (let listing of allListings) { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img 
            src="<%= listing.image.url %>" 
            class="card-img-top" 
            alt="<%= listing.title %>"
            style="height: 250px; object-fit: cover;"
          >
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text text-muted small">
              <%= listing.description.substring(0, 100) %>...
            </p>
            <div class="mt-auto">
              <p class="mb-1">
                <strong>â‚¬<%= listing.price.toLocaleString() %></strong>
              </p>
              <p class="text-muted small mb-3">
                <i class="bi bi-geo-alt"></i> <%= listing.location %>, <%= listing.country %>
              </p>
              <a href="/listings/<%= listing._id %>" class="btn btn-primary w-100">
                View Details
              </a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>